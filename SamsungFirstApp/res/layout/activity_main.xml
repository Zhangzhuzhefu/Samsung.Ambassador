<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" xmlns:app="http://schemas.android.com/apk/res/sg.ntu.mapp.samsungfirstapp">

    <RelativeLayout
        android:id="@+id/topBanner"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal" >
        
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/sample_app"
        android:typeface="sans"
        android:textSize="30sp" />
        
        <Button
            android:id="@+id/button_add"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:clickable="true"
            android:background="@drawable/button_add"/>
         
    </RelativeLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/greidLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topBanner"
        app:alignmentMode="alignBounds"
        android:numColumns="auto_fit"
        android:orientation="horizontal"
        android:useDefaultMargins="true"
        app:columnCount="3"
        app:orientation="horizontal"
        app:rowCount="3" >

        <ImageView
            android:id="@+id/btn_add_photo1"
            android:background="@drawable/defaul_image"
            app:layout_column="0"
            app:layout_row="0"
            android:layout_width="90dp"
       		android:layout_height="90dp"
            android:contentDescription="@string/load_url"
            android:layout_margin="12dp"
            android:layout_marginBottom="20dp"
            android:textSize="30sp"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/btn_add_photo2"
            android:background="@drawable/defaul_image"
            app:layout_row="0"
            app:layout_column="1"
            android:layout_width="90dp"
       		android:layout_height="90dp"
       		android:contentDescription="@string/load_url"
            android:textSize="30sp"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/btn_add_photo3"
            android:background="@drawable/defaul_image"
            app:layout_row ="0"
            app:layout_column="2"
            android:layout_width="90dp"
       		android:layout_height="90dp"
       		android:contentDescription="@string/load_url"
            android:textSize="30sp"
            android:scaleType="fitCenter"/>
        
        <ImageView
            android:id="@+id/btn_add_photo4"
            android:background="@drawable/defaul_image"
            app:layout_row="1"
            app:layout_column ="0"
            android:layout_width="90dp"
       		android:layout_height="90dp"
            android:contentDescription="@string/load_image"
            android:textSize="30sp"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/btn_add_photo5"
            android:background="@drawable/defaul_image"
            app:layout_row ="1"
            app:layout_column="1"
            android:layout_width="90dp"
       		android:layout_height="90dp"
            android:contentDescription="@string/load_image"
            android:textSize="30sp"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/btn_add_photo6"
            android:background="@drawable/defaul_image"
            app:layout_row="1"
            app:layout_column ="2"
            android:layout_width="90dp"
       		android:layout_height="90dp"
            android:contentDescription="@string/load_image"
            android:textSize="30sp"
            android:scaleType="fitCenter"/>
        
        <ImageView
            android:id="@+id/btn_add_photo7"
            android:background="@drawable/defaul_image"
            app:layout_row ="2"
            app:layout_column="0"
            android:layout_width="90dp"
       		android:layout_height="90dp"
            android:contentDescription="@string/load_image"
            android:textSize="30sp"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/btn_add_photo8"
            android:background="@drawable/defaul_image"
            app:layout_row="2"
            app:layout_column ="1"
            android:layout_width="90dp"
       		android:layout_height="90dp"
            android:contentDescription="@string/load_image"
            android:textSize="30sp"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/btn_add_photo9"
            android:background="@drawable/defaul_image"
            android:contentDescription="@string/load_image"
            app:layout_row ="2"
            app:layout_column="2"
            android:layout_width="90dp"
       		android:layout_height="90dp"
			android:layout_margin="12dp"
			android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:scaleType="fitCenter"/>
    </android.support.v7.widget.GridLayout>
    
     <Button
            android:id="@+id/button_clear"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:clickable="true"
            android:onClick="clearAll"
            android:background="@drawable/button_clear"/>

</RelativeLayout>